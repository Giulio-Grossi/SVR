n_control=10
n_treated=1
time_periods=40
t0=39

#sim=t(sim)
y=sim
y0=y[2: nrow(y), 1:t0]
dim(y0)
svd<-svd(y0)
h_v<-svd$v%*%t(svd$v)

h_v - t(y0)%*%solve(y0%*%t(y0))%*%y0


sigma_v<-(1/(t0-n_control))*sum((diag(t0) - h_v )
                                * sim[1,])^2*diag(20)

model<-lm(sim[1,1:t0] ~ -1 +t(y0))
y_pred<-model$coefficients%*%y0
errori<-sim[1,1:t0] - y_pred

sigma_vii<-(1/(t0-n_control))*sum(errori)^2*diag(20)

alpha<-hz_reg(sim[, 2:11], 30)
t0=30

